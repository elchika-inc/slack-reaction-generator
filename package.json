{
  "name": "slack-reaction-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run postbuild",
    "postbuild": "cp _headers dist/ && cp _redirects dist/ && cp public/sitemap.xml dist/ && cp public/robots.txt dist/ 2>/dev/null || true",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && npx wrangler pages deploy dist",
    "clean": "rm -rf dist/ node_modules/.vite/ .wrangler/",
    "lighthouse": "node dev/scripts/lighthouse-monitor.js",
    "lighthouse:ci": "node dev/scripts/lighthouse-monitor.js --ci",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@preact/compat": "^18.3.1",
    "file-saver": "^2.0.5",
    "gif.js": "^0.2.0",
    "preact": "^10.27.0",
    "react-color": "^2.19.3",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "c8": "^10.1.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "happy-dom": "^18.0.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.16",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "vite": "^5.3.4",
    "vite-plugin-purgecss": "^0.2.13",
    "vite-plugin-pwa": "^1.0.2",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0",
    "wrangler": "^4.30.0"
  }
}
