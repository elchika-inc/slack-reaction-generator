{
  "name": "slack-reaction-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run postbuild",
    "postbuild": "node scripts/prerender.js && node scripts/extract-critical-css.js && cp _headers dist/ && cp _redirects dist/ 2>/dev/null || true",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && npx wrangler pages deploy dist",
    "clean": "rm -rf dist/ node_modules/.vite/ .wrangler/",
    "lighthouse": "node scripts/lighthouse-monitor.js",
    "lighthouse:ci": "node scripts/lighthouse-monitor.js --ci"
  },
  "dependencies": {
    "@preact/compat": "^18.3.1",
    "file-saver": "^2.0.5",
    "gif.js": "^0.2.0",
    "preact": "^10.27.0",
    "react-color": "^2.19.3",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.16",
    "terser": "^5.43.1",
    "vite": "^5.3.4",
    "vite-plugin-pwa": "^1.0.2",
    "wrangler": "^4.30.0"
  }
}
